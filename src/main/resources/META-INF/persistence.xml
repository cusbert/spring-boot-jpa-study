<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">

    <persistence-unit name="jpabook">
        <class>com.jpa.study.ch6.Member</class>
        <class>com.jpa.study.ch6.Team</class>
        <class>com.jpa.study.ch6.Order</class>
        <class>com.jpa.study.ch6.OrderItem</class>
        <class>com.jpa.study.ch6.Item</class>
        <class>com.jpa.study.ch6.Locker</class>
        <class>com.jpa.study.ch6.Delivery</class>
        <class>com.jpa.study.ch6.OrderStatus</class>
        <class>com.jpa.study.ch6.DeliveryStatus</class>

        <properties>

            <!-- 필수 속성 -->
            <property name="javax.persistence.jdbc.driver" value="org.mariadb.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.user" value="sa"/>
            <property name="javax.persistence.jdbc.password" value="sa"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mariadb://localhost:3306/testdb"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MariaDB103Dialect" />

            <!-- 옵션 -->
            <property name="hibernate.show_sql" value="false" />
            <property name="hibernate.format_sql" value="true" />
            <property name="hibernate.use_sql_comments" value="true" />
            <property name="hibernate.id.new_generator_mappings" value="true" />

            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hbm2ddl.auto" value="update" />
        </properties>
    </persistence-unit>

</persistence>